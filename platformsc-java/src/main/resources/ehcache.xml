<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns='http://www.ehcache.org/v3'
        xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <!--
      This is a default configuration, it is re-configured by the CacheConfiguration Spring Bean, using the
      properties from the resources/config/*.yml files.
    -->

    <cache-template name="simple">
        <expiry>
            <ttl unit="seconds">3600</ttl>
        </expiry>
        <heap>100</heap>
    </cache-template>


    <cache alias="ro.teamnet.bootstrap.domain.User"
           uses-template="simple">
    </cache>

    <cache alias="ro.teamnet.bootstrap.domain.Authority"
           uses-template="simple">
    </cache>

    <cache alias="ro.teamnet.bootstrap.domain.User.authorities"
           uses-template="simple">
    </cache>

    <cache alias="ro.teamnet.bootstrap.domain.PersistentToken"
           uses-template="simple">
    </cache>

    <cache alias="ro.teamnet.bootstrap.domain.User.persistentTokens"
           uses-template="simple">
    </cache>

</config>
